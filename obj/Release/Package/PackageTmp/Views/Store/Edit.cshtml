    .form-horizontal {
        font-size: 22px;
        font-family: Calibri;
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        color: black;
        padding: 12px 20px;
    }

    button {
        font-size: 10px;
        text-decoration: none;
        color: white;
