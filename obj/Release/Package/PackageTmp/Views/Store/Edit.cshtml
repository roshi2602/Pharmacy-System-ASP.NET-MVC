                    @Html.EditorFor(model => model.PharmWebsite, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PharmWebsite, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                    @Html.Raw(TempData["msg"])
                </div>
            </div>
        </div>
    }

    <div>
        <button>      @Html.ActionLink("Back to List", "Home")</button>
    </div>
</center>
