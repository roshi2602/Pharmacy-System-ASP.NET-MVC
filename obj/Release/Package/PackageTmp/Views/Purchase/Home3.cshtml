@model IEnumerable<Practice4.ViewModel.PurchaseView>
@{
    ViewBag.Title = "Index";
}
@{
    Layout = null;
}

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="~/Store/Home/Home.cshtml">Medicine List</a>
        <a href="~/Agency/Home2/Home2.cshtml">Agencies List</a>

        <a>
            @if (Session["username"] != null)
            {
                <a href="#" style="position: absolute; right: 50px;">Welcome, @Session["username"]</a>
            }
        </a>
        <a>
            @if (Session["username"] != null)
            {
                <script type="text/javascript">
                    function logout() {
                        if (confirm("Are you sure to logout?"))
                            return true;
                        else
                            return false;
                    }
                </script>
                @Html.ActionLink("Logout", "Logout", "Account", null, new { onclick = "return logout()" });

            }
            else
            {
                @Html.ActionLink("Login", "Login", "Account");
            }
        </a>

    </div>
    <h2><center><u>PURCHASE LIST</center></u></h2>

    <div>
        <button>
            @Html.ActionLink("Create New", "Create")
        </button>
    </div>
    <br />
    @using (Html.BeginForm()) { 
        @Html.TextBox("search")<input type="submit" value="search" />
    }

    <center>
        <div id="Grid">
            <table class="table table-bordered" cellpadding="5" cellspacing="0" style="border: 3px solid #ccc;font-size: 13pt;">
                <tr>
                    <th>PurchaseId</th>
                    <th>Supplier</th>
                    <th>BatchNo</th>
                    <th>Quantity</th>
                    <th>Date</th>
                </tr>
                @foreach (var  i in Model)
                {

                    <tr>
                        <td>
                            @i.PurchaseId
                        </td>
                        <td>
                            @i.Supplier
                        </td>
                        <td>
                            @i.BatchNo
                        </td>
                        <td>
                            @i.Quantity
                        </td>

                    <td>
                        @i.Date
                    </td>
                    </tr>
                }
            </table>
        </div>
        <br />
        <br />
        @using (Html.BeginForm("Export", "Purchase", FormMethod.Post))
        {
            <input type="hidden" name="GridHtml" />
            <input type="submit" id="btnSubmit" value="Export to PDF" />
        }
       
        </div>
        <br />
    </center>


    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 40px;
        }

        .topnav {
            overflow: hidden;
            background-color: darkslateblue;
            font-size: 17px;
        }

            .topnav a {
                float: left;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav a:hover {
                    background-color: dodgerblue;
                    color: black;
                }

                .topnav a.active {
                    background-color: black;
                    color: white;
                }

        body {
            color: black;
            background-color: aliceblue;
            font-size: 30px;
            font-family: 'Times New Roman', Times, serif;
        }

        th {
            background-color: dodgerblue;
            font-size: 25px;
        }

        h2 {
            font-size: 30px;
        }

        button {
            font-size: 15px;
            text-decoration: none;
            color: white;
            background-color: dodgerblue;
            padding: 15px 20px;
            border-radius: 4px;
            font-weight: normal;
            text-transform: uppercase;
            transition: all 0.2s ease-in-out;
        }

            button:hover {
                color: yellow;
                box-shadow: red;
            }

        input {
            font-size: 15px;
            text-decoration: none;
            color: white;
            background-color: dodgerblue;
            padding: 15px 20px;
            border-radius: 4px;
            font-weight: normal;
            text-transform: uppercase;
            transition: all 0.2s ease-in-out;
        }
    </style>

</body>
